# Makefile for building the optimized file processor

CC = gcc
CFLAGS = -O3 -march=native -flto -funroll-loops -Wall -Wextra -std=c99
LDFLAGS = -pthread
TARGET = file_processor
SOURCE = file_processor.c

# Default target
$(TARGET): $(SOURCE)
	@echo "ðŸ”¨ Compiling optimized C file processor..."
	$(CC) $(CFLAGS) $(SOURCE) -o $(TARGET) $(LDFLAGS)
	@echo "âœ… Build complete: $(TARGET)"

# Install target (optional)
install: $(TARGET)
	@echo "ðŸ“¦ Installing $(TARGET) to /usr/local/bin..."
	sudo cp $(TARGET) /usr/local/bin/
	sudo chmod +x /usr/local/bin/$(TARGET)
	@echo "âœ… Installation complete"

# Clean target
clean:
	@echo "ðŸ§¹ Cleaning build artifacts..."
	rm -f $(TARGET)
	@echo "âœ… Clean complete"

# Performance test target
test: $(TARGET)
	@echo "ðŸ§ª Running performance test..."
	time ./$(TARGET) ../docs/diagrams ../docs/output/diagrams

.PHONY: install clean test
